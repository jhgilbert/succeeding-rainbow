    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES6",
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false
  }
}
